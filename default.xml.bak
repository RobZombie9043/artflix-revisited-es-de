<!--
    Variant - Default
-->

<theme> 

    <include>./navigationsounds.xml</include>
    
        <include>${rootpath}/_inc/systems/metadata-global/_default.xml</include>
        <include>${rootpath}/_inc/systems/metadata-global/${system.theme}.xml</include>
    
        <variables>
            <rootpath>./</rootpath>
            <systemPromoImage>${rootpath}/_inc/systems/fanart/${system.theme}.jpg</systemPromoImage>
        </variables>
    
        <view name="system">
            <image name="systembackgroundoverlay">
                <pos>0 0</pos>
                <size>1 1</size>
                <path>${rootpath}/_inc/images/defaultsystemgrad.png</path>
                <color>959595FF</color>
                <zIndex>11</zIndex>
            </image>
            <image name="backgroundpromo">
                <pos>0 0</pos>
                <size>1 1</size>
                <path>${systemPromoImage}</path>
                <interpolation>linear</interpolation>
                <scrollFadeIn>true</scrollFadeIn>
                <zIndex>9</zIndex>
            </image>

            
            <text name="system-name">
                <systemdata>fullname</systemdata>
                <pos>0.053 0.16</pos>
                <size>0.4 0.2</size>
                <fontSize>0.065</fontSize>
                <fontPath>${rootpath}/_inc/fonts/Exo2-BoldCondensed.otf</fontPath>
                <lineSpacing>1.1</lineSpacing>
                <color>FFFFFF</color>
                <verticalAlignment>bottom</verticalAlignment>
                <container>true</container>
                <containerStartDelay>1</containerStartDelay>
                <containerResetDelay>2</containerResetDelay>
                <letterCase>uppercase</letterCase>
            </text>
            <text name="gameCount">
                <pos>0.053 0.31</pos>
                <size>0.4 0</size>
                <!--<pos>0.75 0.86</pos>
                <size>0.2 0.2</size>-->
                <systemdata>gamecount</systemdata>
                <fontSize>0.024</fontSize>
                <fontPath>${rootpath}/_inc/fonts/Exo2-BoldCondensed.otf</fontPath>
                <lineSpacing>1.1</lineSpacing>
                <horizontalAlignment>left</horizontalAlignment>
                <color>FFFFFF</color>
             </text>
            <text name="system-year">
                <text>${systemReleaseYear}</text>
                <pos>0.053 0.31</pos>
                <size>0.4 0</size>
                <fontSize>0.024</fontSize>
                <fontPath>${rootpath}/_inc/fonts/Exo2-BoldCondensed.otf</fontPath>
                <lineSpacing>1.1</lineSpacing>
                <color>FFFFFF</color>
                <verticalAlignment>center</verticalAlignment>
                <horizontalAlignment>right</horizontalAlignment>
            </text>
            <text name="system-description">
                <pos>0.053 0.34</pos>
                <size>0.4 0.18</size>
                <text>${systemDescription}</text>
                <fontSize>0.024</fontSize>
                <lineSpacing>1.1</lineSpacing>
                <color>BBBBBB</color>
                <verticalAlignment>top</verticalAlignment>
                <container>true</container>
            </text>
            <gameselector name="randomselection">
            </gameselector>
            <video name="systembackgroundvideo">
                <pos>0.053 0.675</pos>
                <size>0 0.3</size>
                <origin>0 0.5</origin>
                <zIndex>12</zIndex>
            </video>



            <carousel name="systemCarousel">
                <pos>1 0.5</pos>
                <size>0.3 1</size>
                <origin>1 .5</origin>
                <type>vertical</type>
                <staticImage>${rootpath}/_inc/systems/logos/${system.theme}.svg</staticImage>
                <defaultImage>${rootpath}/_inc/systems/logos/${system.theme}.png</defaultImage>
                <maxItemCount>6</maxItemCount>
                <itemSize>0.2 0.125</itemSize>
                <itemScale>1.35</itemScale>
                <imageInterpolation>linear</imageInterpolation>
                <color>00000000</color>
                <textColor>BBBBBB</textColor>
                <fontSize>0.055</fontSize>
                <letterCase>uppercase</letterCase>
                <lineSpacing>1.2</lineSpacing>
                <selectedItemMargins>.02 .02</selectedItemMargins>
                <!--<imageBrightness>.25</imageBrightness>-->
                <reflectionsOpacity>.25</reflectionsOpacity>
                <reflectionsFalloff>1.25</reflectionsFalloff>
                <unfocusedItemOpacity>0.5</unfocusedItemOpacity>
                <unfocusedItemDimming>.5</unfocusedItemDimming>
                <fastScrolling>true</fastScrolling>
            </carousel>
            
        </view>
        
        <aspectRatio name="16:10">
            <view name="system">
                <image name="backgroundpromo">
                    <pos>-.03 0</pos>
                    <size>0 1</size>
                </image>
            </view>
        </aspectRatio>
    
        <view name="gamelist">
            <image name="gamelistbackgroundoverlay">
                <pos>0 0</pos>
                <size>1 1</size>
                <path>${rootpath}/_inc/images/artflixgamelistoverlay.png</path>
                <color>959595FF</color>
                <zIndex>45</zIndex>
            </image>
            
            <video name="gamevideo">
                <pos>1 0</pos>
                <!-- old cropsize-->
                <cropSize>.6 .75</cropSize>
                <!-- newer, smaller cropsize> -->
                <!-- <cropSize>.48 .63</cropSize> -->
                <!-- size here is nice for 4:3 vids but fanart doens't look good, too short -->
                <!-- <size>.6 0</size> -->
                <!-- size here issue is vertical arcade games are far right of screen -->
                <!--<size>0 .65</size>-->
                <origin>1 0</origin>
                <defaultImage>${rootpath}/_inc/images/defaultcover.png</defaultImage>
                <imageType>fanart, screenshot, titlescreen, cover</imageType>
                <pillarboxes>false</pillarboxes>
                <delay>1</delay>
                <scrollFadeIn>true</scrollFadeIn>
                <zIndex>30</zIndex>
            </video>
            
            <image name="game-logo">
                <pos>0.023 0.255</pos>
                <origin>0 1</origin>
                <maxSize>0.3 0.2</maxSize>
                <imageType>marquee</imageType>
                <scrollFadeIn>true</scrollFadeIn>
                <zIndex>46</zIndex>
            </image>
            <text name="descriptiontext">
                <pos>0.023 0.29</pos>
                <size>0.385 0.18</size>
                <metadata>description</metadata>
                <container>true</container>
                <fontSize>0.024</fontSize>
                <color>BBBBBB</color>
                <lineSpacing>1.1</lineSpacing>
                <verticalAlignment>top</verticalAlignment>
                <zIndex>46</zIndex>
            </text>

            <rating name="ratinggraphic">
                <pos>.023 .272</pos>
                <origin>0 0.5</origin>
                <size>0 0.03</size>
                <filledPath>${rootpath}/_inc/images/star_filled.svg</filledPath>
                <unfilledPath>${rootpath}/_inc/images/star_unfilled.svg</unfilledPath>
                <color>FFFFFF</color>
                <zIndex>65</zIndex>
            </rating>
            <badges name="badges">
                <pos>0.17 0.273</pos>
                <origin>0 0.5</origin>
                <size>.1 .028</size>
                <horizontalAlignment>left</horizontalAlignment>
                <direction>column</direction>
                <lines>4</lines>
                <itemsPerLine>1</itemsPerLine>
                <slots>favorite</slots>
                <customBadgeIcon badge="favorite">${rootpath}/_inc/images/yes.png</customBadgeIcon>
                <zIndex>65</zIndex>
            </badges>

            <image name="players-icon">
                <pos>.1165 .273</pos>
                <origin>0 .5</origin>
                <maxSize>.028 .03</maxSize>
                <path>${rootpath}/_inc/images/icon-players.svg</path>
                <color>FFFFFF</color>
                <metadataElement>true</metadataElement>
                <zIndex>65</zIndex>
            </image>
            <text name="players">
                <pos>.1365 .273</pos>
                <origin>0 .5</origin>
                <size>.02 .018</size>
                <fontSize>.03</fontSize>
                <metadata>players</metadata>
                <defaultValue>?</defaultValue>
                <color>FFFFFF</color>
                <lineSpacing>1</lineSpacing>
                <zIndex>65</zIndex>
            </text>
