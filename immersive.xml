<!--
    Variant - Immersive
-->

<theme> 

    <include>./navigationsounds.xml</include>
    
        <include>${rootpath}/core/metadata-global/_default.xml</include>
        <include>${rootpath}/core/metadata-global/${system.theme}.xml</include>
    
        <variables>
            <rootpath>./</rootpath>
            <systemPromoImage>${rootpath}/${system.theme}/images/promo.jpg</systemPromoImage>
            <systemLogo>${rootpath}/${system.theme}/images/logo.png</systemLogo>
        </variables>
    
        <view name="system">
            <image name="systembackgroundoverlay">
                <pos>0 0</pos>
                <size>1 1</size>
                <path>${rootpath}/core/images/topcarouseloverlay.png</path>
                <color>959595FF</color>
                <zIndex>11</zIndex>
            </image>
            <image name="backgroundpromo">
                <pos>0 0</pos>
                <size>1 1</size>
                <path>${systemPromoImage}</path>
                <interpolation>linear</interpolation>
                <scrollFadeIn>true</scrollFadeIn>
                <zIndex>9</zIndex>
            </image>

            <carousel name="systemCarousel">
                <pos>0 0</pos>
                <size>1 0.25</size>
                <type>horizontal</type>
                <horizontalOffset>-.26</horizontalOffset>
                <verticalOffset>-.05</verticalOffset>
                <staticImage>${rootpath}/${system.theme}/images/logo.png</staticImage>
                <defaultImage>${rootpath}/${system.theme}/images/logo.svg</defaultImage>
                <maxItemCount>3</maxItemCount>
                <itemSize>0.25 0.15</itemSize>
                <itemScale>1.5</itemScale>
                <imageInterpolation>linear</imageInterpolation>
                <itemVerticalAlignment>bottom</itemVerticalAlignment>
                <color>00000000</color>
                <textColor>BBBBBB</textColor>
                <fontSize>0.055</fontSize>
                <letterCase>uppercase</letterCase>
                <lineSpacing>1.2</lineSpacing>
                <selectedItemMargins>.02 .02</selectedItemMargins>
                <!--<imageBrightness>.25</imageBrightness>-->
                <!--<reflections>true</reflections>
                <reflectionsOpacity>.25</reflectionsOpacity>
                <reflectionsFalloff>1.25</reflectionsFalloff>-->
                <unfocusedItemOpacity>0.5</unfocusedItemOpacity>
                <unfocusedItemDimming>.5</unfocusedItemDimming>
                <fastScrolling>true</fastScrolling>
            </carousel>


            <text name="gameCount">
                <pos>0.053 0.26</pos>
                <size>0.4 0</size>
                <!--<pos>0.75 0.86</pos>
                <size>0.2 0.2</size>-->
                <systemdata>gamecount</systemdata>
                <fontSize>0.024</fontSize>
                <fontPath>${rootpath}/core/fonts/Exo2-BoldCondensed.otf</fontPath>
                <lineSpacing>1.1</lineSpacing>
                <horizontalAlignment>left</horizontalAlignment>
                <color>FFFFFF</color>
             </text>
            <text name="system-year">
                <text>${systemReleaseYear}</text>
                <pos>0.053 0.26</pos>
                <size>0.4 0</size>
                <fontSize>0.024</fontSize>
                <fontPath>${rootpath}/core/fonts/Exo2-BoldCondensed.otf</fontPath>
                <lineSpacing>1.1</lineSpacing>
                <color>FFFFFF</color>
                <verticalAlignment>center</verticalAlignment>
                <horizontalAlignment>right</horizontalAlignment>
            </text>
            <text name="system-description">
                <text>${systemDescription}</text>
                <pos>0.053 0.29</pos>
                <size>0.4 0.18</size>
                <fontSize>0.024</fontSize>
                <lineSpacing>1.1</lineSpacing>
                <color>BBBBBB</color>
                <verticalAlignment>top</verticalAlignment>
                <container>true</container>
            </text>
            <gameselector name="randomselection">
            </gameselector>
            <video name="systembackgroundvideo">
                <pos>.5 .5</pos>
                <size>1 0</size>
                <origin>.5 .5</origin>
                <imageType>fanart, screenshot, titlescreen, cover</imageType>
                <pillarboxes>false</pillarboxes>
                <delay>1</delay>
                <scrollFadeIn>true</scrollFadeIn>
                <zIndex>10</zIndex>
            </video>

            
        </view>
        
        <aspectRatio name="16:10">
            <view name="system">
                <video name="systembackgroundvideo">
                    <size>1.8 0</size>
                </video>
            </view>
        </aspectRatio>
    
        <view name="gamelist">
            <image name="gamelistbackgroundoverlay">
                <pos>0 0</pos>
                <size>1 1</size>
                <path>${rootpath}/core/images/artflixgamelistoverlay.png</path>
                <color>959595FF</color>
                <zIndex>45</zIndex>
            </image>
            
            <video name="gamevideo">
                <pos>1 0</pos>
                <!-- old cropsize-->
                <cropSize>.6 .75</cropSize>
                <!-- newer, smaller cropsize> -->
                <!-- <cropSize>.48 .63</cropSize> -->
                <!-- size here is nice for 4:3 vids but fanart doens't look good, too short -->
                <!-- <size>.6 0</size> -->
                <!-- size here issue is vertical arcade games are far right of screen -->
                <!--<size>0 .65</size>-->
                <origin>1 0</origin>
                <imageType>fanart, screenshot, titlescreen, cover</imageType>
                <pillarboxes>false</pillarboxes>
                <delay>1</delay>
                <scrollFadeIn>true</scrollFadeIn>
                <zIndex>30</zIndex>
            </video>
            
            <image name="game-logo">
                <pos>0.023 0.255</pos>
                <origin>0 1</origin>
                <maxSize>0.3 0.2</maxSize>
                <imageType>marquee</imageType>
                <scrollFadeIn>true</scrollFadeIn>
                <zIndex>46</zIndex>
            </image>
            <text name="descriptiontext">
                <pos>0.023 0.29</pos>
                <size>0.385 0.18</size>
                <metadata>description</metadata>
                <container>true</container>
                <fontSize>0.024</fontSize>
                <color>BBBBBB</color>
                <lineSpacing>1.1</lineSpacing>
                <verticalAlignment>top</verticalAlignment>
                <zIndex>46</zIndex>
            </text>

            <rating name="ratinggraphic">
                <pos>.023 .272</pos>
                <origin>0 0.5</origin>
                <size>0 0.03</size>
                <filledPath>${rootpath}/core/images/star_filled.svg</filledPath>
                <unfilledPath>${rootpath}/core/images/star_unfilled.svg</unfilledPath>
                <color>FFFFFF</color>
                <zIndex>65</zIndex>
            </rating>
            <badges name="badges">
                <pos>0.17 0.273</pos>
                <origin>0 0.5</origin>
                <size>.1 .028</size>
                <horizontalAlignment>left</horizontalAlignment>
                <direction>column</direction>
                <lines>4</lines>
                <itemsPerLine>1</itemsPerLine>
                <slots>favorite</slots>
                <customBadgeIcon badge="favorite">${rootpath}/core/images/yes.png</customBadgeIcon>
                <zIndex>65</zIndex>
            </badges>

            <image name="players-icon">
                <pos>.1165 .273</pos>
                <origin>0 .5</origin>
                <maxSize>.028 .03</maxSize>
                <path>${rootpath}/core/images/icon-players.svg</path>
                <color>FFFFFF</color>
                <metadataElement>true</metadataElement>
                <zIndex>65</zIndex>
            </image>
            <text name="players">
                <pos>.1365 .273</pos>
                <origin>0 .5</origin>
                <size>.02 .018</size>
                <fontSize>.03</fontSize>
                <metadata>players</metadata>
                <defaultValue>Unknown</defaultValue>
                <color>FFFFFF</color>
                <lineSpacing>1</lineSpacing>
                <zIndex>65</zIndex>
            </text>
