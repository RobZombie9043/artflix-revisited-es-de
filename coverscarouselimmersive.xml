<!--
    Variant - Immersive
-->

<theme> 

    <include>./coverscarousel.xml</include>
    
    <view name="system">
        <video name="systembackgroundvideo">
            <pos>.5 .5</pos>
            <size>1 0</size>
            <origin>.5 .5</origin>
            <imageType>fanart, screenshot, titlescreen, cover</imageType>
            <pillarboxes>false</pillarboxes>
            <delay>2</delay>
            <scrollFadeIn>true</scrollFadeIn>
            <zIndex>10</zIndex>
        </video>
    </view>

    <view name="gamelist">
        <image name="gamelistbackgroundoverlay">
            <path>${rootpath}/_inc/images/topcarouseloverlay.png</path>
        </image>

        <video name="gamevideo">
            <pos>.5 .5</pos>
            <size>1 0</size>
            <origin>.5 .5</origin>
            <zIndex>10</zIndex>
        </video>
    </view>
    
    <aspectRatio name="16:10">
        <view name="system">
            <video name="systembackgroundvideo">
                <size>1.11 0</size>
            </video>
        </view>
        <view name="gamelist">
            <video name="gamevideo">
                <size>1.11 0</size>
            </video>
        </view>
    </aspectRatio>

    <aspectRatio name="19.5:9">
        <view name="system">
            <video name="systembackgroundvideo">
                <pos>1 .5</pos>
                <size>.82 0</size>
                <origin>1 .5</origin>
            </video>
        </view>
        <view name="gamelist">
            <video name="gamevideo">
                <pos>1 .5</pos>
                <size>.82 0</size>
                <origin>1 .5</origin>
            </video>
            <image name="wideoverlayleft">
                <pos>0 0</pos>
                <size>0 1</size>
                <path>${rootpath}/_inc/images/wideoverlayleft.png</path>
                <zIndex>11</zIndex>
            </image>
        </view>
    </aspectRatio>
</theme>